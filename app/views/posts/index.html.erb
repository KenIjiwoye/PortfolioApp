

<h1>Listing Posts</h1>



<% @posts.each do |p| %>
  <h2><%= p.title %></h2>
  <p><%= p.body %></p>
<hr>
<%= link_to 'Show Post', post_path(p[:id]) %>
<%= link_to 'Edit Post', edit_post_path(p[:id]) %>
<%= link_to 'Delete', p, method: :delete, data: {confirm: 'Are you sure?'} %>

<% end %>
<br>

<%= link_to 'New Post', new_post_path %>